<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= text_field_tag :email, nil, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= password_field_tag :password, nil, placeholder: "Password" %>
  </div>

  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>
<% end %><br><br><br>








<!-- example of form_with -->
<%= form_with url: sessions_path do |f| %>
  <div class="field">
    <%= f.text_field :email, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log In" %>
  </div>
<% end %>
